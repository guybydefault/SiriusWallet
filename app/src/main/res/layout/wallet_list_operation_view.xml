<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/operation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/operation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@string/main_font"
        app:layout_constraintStart_toEndOf="@id/operation_icon"
        app:layout_constraintTop_toTopOf="@id/operation_icon" />

    <TextView
        android:id="@+id/operation_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.6"
        android:fontFamily="@string/main_font"
        app:layout_constraintStart_toStartOf="@id/operation_name"
        app:layout_constraintTop_toBottomOf="@id/operation_name" />


    <TextView
        android:id="@+id/operation_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/main_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/operation_icon" />

    <TextView
        android:id="@+id/operation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.6"
        android:fontFamily="@string/main_font"
        app:layout_constraintEnd_toEndOf="@id/operation_sum"
        app:layout_constraintTop_toBottomOf="@id/operation_sum" />


</androidx.constraintlayout.widget.ConstraintLayout>